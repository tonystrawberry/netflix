<%= turbo_frame_tag "movies_genre_#{form.index}", class: "flex items-center gap-x-2 m-2" do %>
  <%= form.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] }, {}, class: "border-0 rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:max-w-md sm:text-sm sm:leading-6" %>

  <%=
    render(Common::LinkComponent.new(
            text: I18n.t("views.editor.movies.new.delete_genre"),
            link: editor_destroy_movies_genre_path(form.index, form.object.id),
            display_as_button: true,
            options: { data: { turbo_stream: true, turbo_method: :delete } }
          ))
  %>
<% end %>
