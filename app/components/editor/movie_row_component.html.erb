<tr>
  <td class="whitespace-nowrap py-5 pl-4 pr-3 text-sm sm:pl-0">
    <div class="flex items-center">
      <div class="h-11 w-11 flex-shrink-0">
        <% if @movie.logo.attached? %>
          <%= image_tag @movie.logo || "", class: "h-11 w-11 rounded-md" %>
        <% else %>
          <%= image_tag "movie_logo_placeholder.png", class: "h-11 w-11 rounded-md" %>
        <% end %>
      </div>
      <div class="ml-4">
        <div class="font-medium text-gray-900"><%= @movie.title %></div>
        <div class="mt-1 inline-flex rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20"><%= @movie.audience_type %></div>
      </div>
    </div>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
    <div class="text-gray-900"><%= @movie.media_type %></div>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
    <div class="text-gray-900"><%= truncate(@movie.description, length: 50) %></div>
  </td>
  <td class="whitespace-nowrap text-center px-3 py-5 text-sm text-gray-500">
    <div class="text-gray-900"><%= @movie.release_year %></div>
  </td>
  <td class="whitespace-nowrap text-center px-3 py-5 text-sm text-gray-500">
    <%= @movie.publishing_status %>
    <div class="mt-2"><%= @movie.published_at %></div>
  </td>
  <td class="whitespace-nowrap text-center text-center px-3 py-5 text-sm text-gray-500">
    <a href="#" class="text-red-600 hover:text-red-900">Edit</a>
  </td>
</tr>
